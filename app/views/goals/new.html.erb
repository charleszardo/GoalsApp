<h3>Add Goal</h3>
<form action="<%= goals_url %>" method="post">
<%= auth_token %>
<label>Title<input type="text" name="goal[title]"></label>
<br>
<label>Body<textarea name="goal[body]"></textarea></label>
<br>
<label>
<input type="radio" name="goal[public]" value="false" checked>Private</label>
<label>
<input type="radio" name="goal[public]" value="true">Public</label>
<br>
<input type="submit" value="submit">
</form>
